package tsp;

import java.util.List;
import java.util.HashMap;
import java.util.Map;

public class Sommet {

	static Map<Integer,Sommet> sommets = new HashMap<Integer,Sommet>();
	int id;
	List<Arrete> arretes_sortantes;
	List<Arrete> arretes_entrantes;
	
	private Sommet(int id){
		this.id = id;
		sommets.put(id, this);
	}
	
	static public Sommet getSommet(int id){
		Sommet retrievedSommet = sommets.get(id);
		if(retrievedSommet == null){
			retrievedSommet = new Sommet(id);
		}
		return retrievedSommet;
	}

	public List<Arrete> getArretes_sortantes() {
		return arretes_sortantes;
	}

	public void setArretes_sortantes(List<Arrete> arretes_sortantes) {
		this.arretes_sortantes = arretes_sortantes;
	}

	public List<Arrete> getArretes_entrantes() {
		return arretes_entrantes;
	}

	public void setArretes_entrantes(List<Arrete> arretes_entrantes) {
		this.arretes_entrantes = arretes_entrantes;
	}

	public int getId() {
		return id;
	}
	
}
